<% if current_user %>
  <%= form_for @comment do |f| %>
    Add comment to question:<%= f.text_field :content %>
    <%= f.hidden_field :commentable_type, :value => "Question" %>
    <%= f.hidden_field :commentable_id, :value => params[:id] %>
    <%= f.submit "Post comment" %>
  <%end %>
<% end %>

