
<% if session[:user_id] && (answer.user_id != session[:user_id]) %>

<% if User.find(session[:user_id]).votes.where("votable_type = ? AND votable_id = ?", "answer", answer.id).empty? %>
<%= button_to "Upvote", :action => "create", controller: "votes", :vote => {votable_id: answer.id, votable_type: "Answer", description: 1 } %>
<% end %>
<%= button_to "Downvote", :action => "create", controller: "votes", :vote => {votable_id: answer.id, votable_type: "Answer", description: -1 } %>
<% end %>
