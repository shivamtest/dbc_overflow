<h1><%= @question.title %></h1>

<p><%= @question.content %></p>

<h3>Answers</h3>
<section class="answer">
  
  <ul>
    <% @answers.each do |answer| %>
      <li><%= answer.content %></li>
    <% end %>

  </ul>

</section>

<%= form_for [@question, @answer] do |f| %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.submit "Post answer" %>

<%end %>
